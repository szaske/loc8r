<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">-->
        <!--&lt;!&ndash; Customize your theme here. &ndash;&gt;-->

        <!--&lt;!&ndash;Added to stop toolbar crash&ndash;&gt;-->
        <!--&lt;!&ndash;<item name="windowActionBar">false</item>&ndash;&gt;-->
        <!--&lt;!&ndash;<item name="windowNoTitle">true</item>&ndash;&gt;-->
    <!--</style>-->

    <style name="DialogTransparentBackgroundTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="DialogTheme" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <item name="titleTextColor">@color/primaryColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="colorControlNormal">@color/secondaryColor</item>
    </style>

    <style name="SignInEditText" parent="Widget.AppCompat.EditText">
        <item name="backgroundTint">@color/primaryTextColor</item>
        <item name="android:textColorHint">@color/primaryTextColor</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">@dimen/sign_int_edit_text_size</item>
        <item name="android:paddingLeft">5dp</item>
        <!--<item name="fontPath">@string/font_light</item>-->
    </style>

    <style name="BaseButton">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">@dimen/sign_int_edit_text_size</item>
    </style>

    <style name="OrangeButton" parent="BaseButton">
        <!--<item name="fontPath">@string/font_bold</item>-->
        <item name="android:background">@drawable/orange_button</item>
        <item name="android:layout_marginLeft">-10dp</item>
        <item name="android:layout_marginRight">-10dp</item>
    </style>

    <style name="TransparentButton" parent="BaseButton">
        <item name="android:textColor">@color/transparent_btn_color_selector</item>
        <item name="android:background">@null</item>
    </style>

    <style name="ToolbarTitle">
        <item name="android:textSize">19sp</item>
        <item name="titleTextColor">@color/primaryTextColor</item>
        <!--<item name="fontPath">@string/font_medium</item>-->
    </style>

    <!-- Official Seattle Passport Section-->

    <style name="Theme.SeattlePassport" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:textColorSecondary">@color/secondaryTextColor</item>
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="android:colorAccent">@color/secondaryColor</item>
        <item name="android:colorPrimary">@color/primaryColor</item>
        <item name="android:colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="android:colorBackground">@color/primaryDarkColor</item>
        <item name="colorButtonNormal">@color/secondaryColor</item>
        <item name="colorControlHighlight">@color/accent_material_dark</item>

    </style>


    <!-- Main List Section-->

    <style name="MainMenu_Layout">
        <item name="android:background">@color/darkBackground</item>
    </style>

    <style name="MainMenu_Scrim">
    </style>

    <style name="MainMenu_Title">
        <item name="android:textSize">66sp</item>
        <item name="android:layout_marginEnd">@dimen/title_margin</item>
        <item name="android:layout_marginStart">@dimen/title_margin</item>
        <item name="android:layout_marginTop">@dimen/title_margin_top</item>
        <item name="android:lineSpacingMultiplier">@dimen/title_ls_multiplier</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/titleTextColor</item>
        <item name="titleTextColor">@color/titleTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MainMenu_Button">
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@drawable/main_menu_button</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1.5</item>
    </style>

    <style name="StampView_Base_Style">
        <item name="android:layout_width">@dimen/stampview_size</item>
        <item name="android:layout_height">@dimen/stampview_size</item>
        <item name="android:layout_marginTop">@dimen/stampview_top_margin</item>
        <item name="android:layout_marginBottom">@dimen/stampview_bottom_margin</item>
        <item name="srcCompat">@drawable/stamp_placeholder</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="StampView_Style_Left" parent="StampView_Base_Style">
        <item name="android:layout_marginEnd">@dimen/stampview_vine_margin</item>
    </style>

    <style name="StampView_Style_Right" parent="StampView_Base_Style">
        <item name="android:layout_marginStart">@dimen/stampview_vine_margin</item>
    </style>

    <style name="VineLine_Base_Style">
        <item name="android:layout_width">@dimen/vineline_width</item>
        <item name="android:layout_height">@dimen/vineline_height</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>

    </style>

    <style name="VineLine_Style_Left" parent="VineLine_Base_Style">
        <item name="android:src">@drawable/stamp_vine_line_left</item>
    </style>

    <style name="VineLine_Style_Right" parent="VineLine_Base_Style">
        <item name="android:src">@drawable/stamp_vine_line_right</item>
    </style>


    <style name="Theme.SeattlePassport.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>

    <style name="Theme.SeattlePassport.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- POI Details Section-->

    <style name="poi_title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">20</item>
        <item name="android:textSize">@dimen/details_title_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="infobox_style">
        <item name="android:background">@drawable/infobox_background</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">8dp</item>
    </style>

</resources>
