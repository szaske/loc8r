<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!--padding-->
    <item android:left="6dp"
        android:right="6dp"
        android:bottom="6dp"
        android:top="6dp">

        <shape
            android:shape="oval">

            <solid
                android:color="#1a000000"/>

            <!--minus the padding-->
            <size
                android:width="52dp"
                android:height="52dp"/>
            <stroke
                android:color="#df000000"
                android:dashWidth="1dp"
                android:dashGap="1.7dp"
                android:width="1dp"/>

            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />

            <corners
                android:bottomLeftRadius="6dp"
                android:bottomRightRadius="6dp"
                android:topLeftRadius="6dp"
                android:topRightRadius="6dp" />

        </shape>
    </item>
</layer-list>



