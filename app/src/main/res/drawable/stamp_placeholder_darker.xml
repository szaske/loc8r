<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- content background -->
    <item
        android:left="9dp"
        android:right="9dp"
        android:top="9dp"
        android:bottom="9dp">
        <shape android:shape="oval">

            <!--<solid-->
            <!--android:color="#12000000"/>-->

            <gradient
                android:type="radial"
                android:gradientRadius="60dp"
                android:startColor="#c6000000"
                android:endColor="#15000000"
                android:centerX="0.53"
                android:centerY="0.53"/>


            <!--minus the padding-->
            <size
                android:width="60dp"
                android:height="60dp"/>
            <stroke
                android:color="#acb6b6b6"
                android:dashWidth="4dp"
                android:dashGap="4dp"
                android:width="2dp"/>

            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />

        </shape>
    </item>
</layer-list>