<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/poiGroupBackgroundImageView"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="2dp"
        android:adjustViewBounds="true"
        android:background="@drawable/messenger_button_blue_bg_selector"
        android:paddingBottom="2dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:paddingTop="2dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="2"
        tools:layout_constraintRight_creator="2"
        tools:layout_constraintTop_creator="2" />

    <TextView
        android:id="@+id/poiGroupTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1.5"
        android:text="TextView"
        android:textColor="@color/primaryTextColor"
        android:textSize="20sp"
        app:fontPath="fonts/Roboto-Bold.ttf"
        app:layout_constraintEnd_toEndOf="@+id/poiGroupBackgroundImageView"
        app:layout_constraintLeft_toLeftOf="@+id/poiGroupBackgroundImageView"
        app:layout_constraintTop_toTopOf="@+id/poiGroupBackgroundImageView" />


</android.support.constraint.ConstraintLayout>