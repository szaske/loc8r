<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.loc8r.seattle.activities.ManagementActivity"
    tools:showIn="@layout/activity_management">

    <Button
        android:id="@+id/addPoisBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Add Fake POIs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/addSinglePOIBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Add POI + Data"
        app:layout_constraintStart_toStartOf="@id/addPoisBTN"
        app:layout_constraintTop_toBottomOf="@id/addPoisBTN" />

    <Button
        android:id="@+id/bn_POIPlaceholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Create POI placeholder"
        app:layout_constraintStart_toStartOf="@id/addSinglePOIBTN"
        app:layout_constraintTop_toBottomOf="@id/addSinglePOIBTN" />

    <Button
        android:id="@+id/bn_MakeAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Make Admin"
        app:layout_constraintStart_toStartOf="@id/bn_POIPlaceholder"
        app:layout_constraintTop_toBottomOf="@id/bn_POIPlaceholder" />
</android.support.constraint.ConstraintLayout>
