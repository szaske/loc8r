<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map_activity_framelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.loc8r.seattle.activities.MapActivity"
    tools:ignore="MissingPrefix">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.loc8r.seattle.activities.MapsActivity" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/map_rv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:paddingLeft="180dp"
        android:paddingRight="180dp"
        android:visibility="gone"
        mapbox:layout_constraintEnd_toEndOf="parent"
        mapbox:layout_constraintStart_toStartOf="parent"
        mapbox:layout_constraintTop_toTopOf="@+id/map">

    </android.support.v7.widget.RecyclerView>

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/rootView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        mapbox:layout_constraintBottom_toBottomOf="@+id/map"
        mapbox:layout_constraintEnd_toEndOf="@+id/map"
        mapbox:layout_constraintStart_toStartOf="@+id/map"
        tools:context="com.loc8r.seattle.activities.MapsActivity">

        <include
            layout="@layout/map_drawer"
            tools:visibility="visible" />

    </android.support.design.widget.CoordinatorLayout>


    <LinearLayout
        android:id="@+id/mapDrawerContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/mapDrawer"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@color/com_facebook_blue"
            android:orientation="vertical">

            <TextView
                android:id="@+id/heightTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Hello There" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="HIDE" />
        </LinearLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>

